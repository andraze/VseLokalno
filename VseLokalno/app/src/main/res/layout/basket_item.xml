<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_4"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="80dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/slika_artikla"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/dp_8" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ime_artikel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:fontFamily="@font/roboto_regular_family"
                android:padding="2dp"
                android:textColor="@color/blue_dark"
                android:textSize="@dimen/sp_18" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kolicina_artikel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:fontFamily="@font/roboto_light_family"
                    android:padding="2dp"
                    android:textColor="@color/blue_dark"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/enota_artikel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:fontFamily="@font/roboto_light_family"
                    android:padding="2dp"
                    android:textColor="@color/blue_dark"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/cena_artikel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_regular_family"
            android:padding="2dp"
            android:textColor="@color/blue_normal"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_light_family"
            android:text="@string/euro"
            android:textColor="@color/blue_normal"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="@dimen/dp_8"
        android:background="@color/blue_normal_low" />

</LinearLayout>
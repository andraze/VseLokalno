<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="300dp"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_16"
        android:fontFamily="@font/roboto_regular_family"
        android:text="@string/potrditev_identitete"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/blue_dark"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_32"
        android:layout_marginBottom="@dimen/dp_16"
        android:fontFamily="@font/roboto_regular_family"
        android:text="@string/reauth_explanation"
        android:textColor="@color/blue_dark"
        android:textSize="@dimen/sp_12" />

    <View
        android:layout_width="0dp"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/old_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:autofillHints="name"
        android:fontFamily="@font/roboto_regular_family"
        android:gravity="center"
        android:hint="@string/elektronska_posta"
        android:inputType="textEmailAddress"
        android:textColor="@color/blue_dark"
        android:textSize="@dimen/sp_18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_4"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/old_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:layout_weight="1"
            android:autofillHints="name"
            android:fontFamily="@font/roboto_regular_family"
            android:gravity="center"
            android:hint="@string/geslo"
            android:inputType="textPassword"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/sp_18" />

        <ImageButton
            android:id="@+id/hide_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/edit_pencil_background"
            android:src="@drawable/ic_eye_crossed" />

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="50dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/re_authentication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_8"
        android:background="@drawable/round_button_background"
        android:fontFamily="@font/roboto_medium_family"
        android:text="@string/prijava"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

</LinearLayout>
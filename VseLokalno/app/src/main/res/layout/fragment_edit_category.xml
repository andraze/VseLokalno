<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginEnd="@dimen/dp_32"
        android:fontFamily="@font/roboto_regular_family"
        android:layout_gravity="center"
        android:text="@string/urejanje_kategorije"
        android:textAllCaps="true"
        android:textColor="@color/blue_dark"
        android:textSize="@dimen/sp_18" />

    <View
        android:layout_width="0dp"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/newCategoryName_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_16"
        android:autofillHints="name"
        android:fontFamily="@font/roboto_regular_family"
        android:gravity="center"
        android:hint="@string/nova_kategorija"
        android:inputType="textCapSentences"
        android:textColor="@color/blue_dark"
        android:textSize="@dimen/sp_18" />

    <View
        android:layout_width="0dp"
        android:layout_height="50dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_categoryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_8"
        android:background="@drawable/round_button_background"
        android:fontFamily="@font/roboto_medium_family"
        android:text="@string/ustvari_kategorijo"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/delete_categoryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_8"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/roboto_medium_family"
        android:text="@string/izbri_i_kategorijo"
        android:textAllCaps="true"
        android:textColor="@color/red_dark"
        android:textSize="@dimen/sp_14"
        android:visibility="gone" />

</LinearLayout>
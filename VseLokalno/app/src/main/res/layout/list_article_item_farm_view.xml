<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_4"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/article_relLayout_recyclerAdapter"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/slika_artikla"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="@dimen/dp_16"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/FullRoundedSquare" />

            <TextView
                android:id="@+id/ime_artikel"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:textColor="@color/blue_normal"
                android:theme="@style/ThemeOverlay.AppCompat" />

            <TextView
                android:id="@+id/cena_artikel"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:textColor="@color/blue_normal"
                android:theme="@style/ThemeOverlay.AppCompat" />

            <TextView
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="@string/article_between"
                android:textColor="@color/blue_normal"
                android:theme="@style/ThemeOverlay.AppCompat" />

            <TextView
                android:id="@+id/enota_artikel"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:textColor="@color/blue_normal"
                android:theme="@style/ThemeOverlay.AppCompat" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/delete_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/zavrzi_artikel"
            android:src="@drawable/ic_clear"
            app:backgroundTint="@color/red_normal"
            app:fabCustomSize="30dp"
            tools:ignore="RelativeOverlap" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
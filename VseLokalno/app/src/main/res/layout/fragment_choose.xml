<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_16dp"
    tools:context=".SignInUp.ChooseFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/zacnimo_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/vpisi_se_btm"
        android:text="@string/zacnimo"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:cornerRadius="3dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/vpisi_se_btm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/white"
        android:text="@string/vpisi_se"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/green_normal"
        app:cornerRadius="3dp"
        app:strokeColor="@color/green_normal"
        app:strokeWidth="1dp" />

</RelativeLayout>
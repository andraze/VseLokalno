<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/article_relLayout_recyclerAdapter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="90dp"
    android:orientation="vertical">

    <LinearLayout
        android:padding="@dimen/dp_4"
        android:id="@+id/lin_layout"
        android:background="@drawable/white_round_border_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="90dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/slika_artikla"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/dp_8" />

        <TextView
            android:id="@+id/ime_artikel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_regular_family"
            android:padding="2dp"
            android:textColor="@color/blue_dark"
            android:textSize="@dimen/sp_18" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cena_artikel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular_family"
                android:padding="2dp"
                android:textColor="@color/blue_normal"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light_family"
                    android:text="@string/na"
                    android:textColor="@color/blue_normal"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/enota_artikel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:fontFamily="@font/roboto_light_family"
                    android:textColor="@color/blue_normal"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dp_8"
        android:background="@color/blue_normal_low" />

</RelativeLayout>
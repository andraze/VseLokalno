<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription">

    <ImageButton
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/ic_cancel"
        android:translationZ="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/article_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/article_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:fontFamily="@font/roboto_bold_family"
            android:textAlignment="center"
            android:textColor="@color/blue_normal"
            android:textSize="@dimen/sp_22" />

        <TextView
            android:id="@+id/article_price_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:fontFamily="@font/roboto_bold_family"
            android:textAlignment="center"
            android:textColor="@color/blue_normal"
            android:textSize="@dimen/sp_18" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="@dimen/dp_8"
            android:fontFamily="@font/roboto_regular_family"
            android:text="@string/kolicina"
            android:textColor="@color/blue_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/article_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:layout_weight="2"
                android:fontFamily="@font/roboto_medium_family"
                android:hint="@string/kolicina"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="@color/blue_light"
                android:textColorHint="@color/blue_normal_low"
                android:textSize="@dimen/sp_22" />

            <TextView
                android:id="@+id/article_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/dp_8"
                android:fontFamily="@font/roboto_medium_family"
                android:textAlignment="center"
                android:textColor="@color/blue_light"
                android:textSize="@dimen/sp_14" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/decrease_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_8"
                android:background="@drawable/decrease_btn_background"
                android:src="@drawable/ic_minus" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/increase_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_8"
                android:background="@drawable/increase_btn_background"
                android:src="@drawable/ic_plus" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="@dimen/dp_8"
            android:fontFamily="@font/roboto_regular_family"
            android:text="@string/zaloga"
            android:textColor="@color/blue_light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/article_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:fontFamily="@font/roboto_medium_family"
                android:textAlignment="center"
                android:textColor="@color/blue_normal"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:id="@+id/article_unit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_regular_family"
                android:textAlignment="center"
                android:textColor="@color/blue_normal"
                android:textColorHint="@color/blue_normal_low"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_article_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:background="@drawable/round_button_background"
            android:fontFamily="@font/roboto_bold_family"
            android:text="@string/v_kosarico"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>

    <View
        android:id="@+id/image_shadow"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/inner_top_shadow" />

</RelativeLayout>
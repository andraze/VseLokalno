<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_layout1_editArticleFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/article_image_editArticleFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:adjustViewBounds="true"
            android:backgroundTint="@color/white"
            android:maxWidth="120dp"
            android:maxHeight="120dp"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_add_image"
            app:shapeAppearanceOverlay="@style/FullRoundedSquare" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/ime_artikel_et_editArticleFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enota_artikel_et_editArticleFragment"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:hint="@string/ime_artikla"
            android:inputType="textCapSentences"
            android:maxLines="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/blue_normal"
            android:textColorHint="@color/blue_normal_low" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/cena_artikel_et_editArticleFragment"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:hint="@string/cena"
            android:inputType="numberDecimal"
            android:maxLines="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/blue_normal"
            android:textColorHint="@color/blue_normal_low" />

        <TextView
            android:id="@+id/dash"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cena_artikel_et_editArticleFragment"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_4"
            android:layout_marginBottom="@dimen/dp_4"
            android:text="@string/dash"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/blue_normal" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/enota_artikel_et_editArticleFragment"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dash"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/dp_4"
            android:hint="@string/enota_kg"
            android:inputType="text"
            android:maxLines="3"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/blue_normal"
            android:textColorHint="@color/blue_normal_low" />

        <Button
            android:id="@+id/omeji_zalogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/article_image_editArticleFragment"
            android:layout_alignParentStart="true"
            android:backgroundTint="@color/white"
            android:text="@string/omeji_zalogo"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/blue_light" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ime_artikel_et_editArticleFragment"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/save_artikel_fab_editArticleFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                android:contentDescription="@string/shrani_artikel"
                android:src="@drawable/ic_check"
                app:fabSize="mini" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/cancel_artikel_fab_editArticleFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                android:contentDescription="@string/zavrzi_artikel"
                android:src="@drawable/ic_clear"
                app:backgroundTint="@color/red_normal"
                app:fabSize="mini" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_layout2_editArticleFragment"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/zaloga_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/zaloga"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/blue_normal" />

        <EditText
            android:id="@+id/kolicina_zaloge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/zaloga_headline"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/dp_16"
            android:hint="@string/hint_kolicine_zaloga"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:textColor="@color/blue_normal"
            android:textColorHint="@color/blue_normal_low" />

        <EditText
            android:id="@+id/enota_zaloge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kolicina_zaloge"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/dp_16"
            android:hint="@string/hint_enote_zaloga"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textColor="@color/blue_normal"
            android:textColorHint="@color/blue_normal_low" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/enota_zaloge"
            android:layout_margin="@dimen/dp_16"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/save_zaloge_fab_editArticleFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                android:contentDescription="@string/shrani_artikel"
                android:src="@drawable/ic_check"
                app:fabSize="mini" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/neomejeno_zaloge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:text="@string/neomejeno"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/blue_light" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/cancel_zaloge_fab_editArticleFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_4"
                android:contentDescription="@string/zavrzi_artikel"
                android:src="@drawable/ic_clear"
                app:backgroundTint="@color/red_normal"
                app:fabSize="mini" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>


</RelativeLayout>
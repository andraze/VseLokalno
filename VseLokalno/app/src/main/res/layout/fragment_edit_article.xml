<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription">

    <ImageButton
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/dp_16"
        android:background="@drawable/ic_cancel"
        android:translationZ="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/article_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:background="@drawable/inner_top_shadow"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_add_image" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/article_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:hint="@string/ime_artikla"
            android:importantForAutofill="no"
            android:inputType="textCapSentences"
            android:textAlignment="center"
            android:textColor="@color/blue_normal"
            android:textColorHint="@color/blue_normal_low"
            android:textSize="@dimen/sp_22" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/article_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:layout_weight="2"
                android:hint="@string/cena"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="@color/blue_normal"
                android:textColorHint="@color/blue_normal_low"
                android:textSize="@dimen/sp_22" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/dash"
                android:textAlignment="center"
                android:textColor="@color/blue_normal"
                android:textColorHint="@color/blue_normal_low"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/article_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:layout_weight="1"
                android:hint="@string/enota"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@color/blue_normal"
                android:textColorHint="@color/blue_normal_low"
                android:textSize="@dimen/sp_22" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/article_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16"
                android:hint="@string/zaloga"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:textColor="@color/blue_normal"
                android:textColorHint="@color/blue_normal_low"
                android:textSize="@dimen/sp_22" />

            <TextView
                android:id="@+id/article_unit2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/blue_normal"
                android:textColorHint="@color/blue_normal_low"
                android:textSize="@dimen/sp_18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_8"
                android:text="@string/na_zalogi"
                android:textAlignment="center"
                android:textColor="@color/blue_normal"
                android:textColorHint="@color/blue_normal_low"
                android:textSize="@dimen/sp_18" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            android:background="@drawable/round_button_background"
            android:fontFamily="@font/roboto_bold_family"
            android:text="@string/shrani_artikel"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />

        <TextView
            android:id="@+id/delete_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:fontFamily="@font/roboto_medium_family"
            android:text="@string/izbrisi_artikel"
            android:textAlignment="center"
            android:textColor="@color/red_normal"
            android:textSize="@dimen/sp_18"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>